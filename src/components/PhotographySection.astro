---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="mb-12">
	<h2 class="text-2xl font-bold mb-4">{t('photography.title')}</h2>
	<div class="flex overflow-x-auto space-x-4 pb-4">
		<!-- Add your carousel content here -->
		<div class="flex-none w-64 h-48 bg-primary flex items-center justify-center rounded">Photo 1</div>
		<div class="flex-none w-64 h-48 bg-primary flex items-center justify-center rounded">Photo 2</div>
		<div class="flex-none w-64 h-48 bg-primary flex items-center justify-center rounded">Photo 3</div>
	</div>
</section>