---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="mb-12">
	<h2 class="text-2xl font-bold mb-4">{t('courses.title')}</h2>
	<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
		<!-- Add your course content here -->
		<div class="bg-primary text-accent p-4 rounded">
			<h3 class="text-xl font-bold mb-2">{t('courses.course1.title')}</h3>
			<p>{t('courses.course1.description')}</p>
		</div>
		<div class="bg-primary text-accent p-4 rounded">
			<h3 class="text-xl font-bold mb-2">{t('courses.course2.title')}</h3>
			<p>{t('courses.course2.description')}</p>
		</div>
	</div>
</section>